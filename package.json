{
  "name": "nexchat",
  "version": "1.0.0",
  "description": "NexChat - Multiplatform Messenger",
  "main": "src/server/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/server/index.js",
    "dev": "nodemon src/server/index.js",
    "migrate": "knex migrate:latest",
    "postinstall": "node setup.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --setupFiles dotenv/config",
    "test:ci": "NODE_ENV=test DB_FILENAME=test_db.sqlite npm run migrate && NODE_OPTIONS=--experimental-vm-modules jest --setupFiles dotenv/config --forceExit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/areww11A/nexchat.git"
  },
  "keywords": [
    "messenger",
    "chat",
    "real-time"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/areww11A/nexchat/issues"
  },
  "homepage": "https://github.com/areww11A/nexchat#readme",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "express": "^4.18.2",
    "ffmpeg-static": "^5.2.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "libsodium-wrappers": "^0.7.15",
    "sqlite3": "^5.1.7",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.2",
    "@types/jest": "^29.5.8",
    "dotenv": "^16.4.7",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^6.3.3"
  }
}
